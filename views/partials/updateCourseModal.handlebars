<!-- Modal -->
<div class="modal fade" id="course-update-modal" tabindex="-1" 
  aria-labelledby="course-update-modal-Label" aria-hidden="true">
  <div class="modal-dialog  modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="course-update-modal-Label">Course Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="course-update-form" data-course-id="">
          
          {{> textInput inputName="course_name" placeholder="Course Name" 
            label="Course Name"}}

          <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" id="course-active" 
              name="active">
            <label class="form-check-label" for="course-active">Active</label>
          </div>
          
          {{> textInput inputName="course_link" 
            placeholder="https://www.youtube.com/embed/..." 
            label="Course Link"}}

          <div class="d-flex flex-wrap justify-content-center mb-3">
            {{#each tags as | tag | }}
              <div class="col-4">
                {{> checkbox name="tag_name" text=this.tag_name
                value=this.tag_name}}
              </div>
            {{/each}}
          </div>
          
          <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-dark mx-2" 
              data-bs-dismiss="modal">
              Cancel
            </button>
            <button type="submit" class="btn btn-warning btn-save-course mx-2">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>