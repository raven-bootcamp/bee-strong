<form class="row g-3" id="signUpForm" novalidate>
  <h2 class="h3 mb-3 fw-normal">Tell us about yourself</h2>

  <div class="col-md-6">
    {{> checkBox text="I am an instructor" inputName="checkBoxInstructor"}}
  </div>
  
  <div class="col-md-6">
    {{> checkBox text="I am a student" inputName="checkBoxStudent"}}
  </div>
  
  {{> textInput 
    label="Email" type="email" inputName="emailInput" 
    placeholder="sample@email.com"}}
  
  {{> textInput label="Password" type="password" inputName="passwordInput" 
    placeholder="password"}}

  {{> button text="Sign up" type="submit"}}
</form>

<script src="/js/signup.js"></script>