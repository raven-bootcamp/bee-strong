<body class="min-vh-100">
  <!-- HEADER -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark py-1" aria-label="navbar">
    <div class="container-fluid">
      <a class="navbar-brand navbrand-text" href="/">
        <img style="width: 60px;" src="/images/bee-strong-logo-sm.jpeg" class="rounded-circle"
          class="d-inline-block align-text-top">
        BeeStrong</a>
      {{!-- <span class="navbar-text fw-bold">BeeStrong</span> --}}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars"
        aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbars">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item navbar-text">
            <a class="nav-link" class="d-inline-block align-text-top" href="/dashboard">Dashboard</a>
          </li>
        </ul>
        <div>
          {{#if loggedIn}}
          <button id='btn-logout' type="button" class="btn btn-outline-light me-2">
            Logout
          </button>
          {{else}}
          <button type="button" class="btn btn-outline-light me-2">
            <a class="text-decoration-none text-light" href="/login">Login</a>
          </button>

          {{#> buttonYellow }}
          <a class="text-decoration-none text-dark" href="/signup">Sign-up</a>
          {{/buttonYellow}}
          {{/if}}
        </div>
      </div>
    </div>
  </nav>

  <!-- MAIN -->
  <main class="container-fluid p-0">
    {{{ body }}}
  </main>
  <footer>

  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
